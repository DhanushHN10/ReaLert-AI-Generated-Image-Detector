{
    "manifest_version": 3,
    "name": "AI Image, text Detector",
    "version": "1.0",
    "description": "Detect if an image is AI-generateddd",
    "permissions": [
        "contextMenus",
        "storage",
        "notifications",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>",
        "http://localhost:5000/*",
        "http://10.200.253.51:5000/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        },
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}